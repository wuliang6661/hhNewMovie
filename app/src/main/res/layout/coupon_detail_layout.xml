<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <include
        android:id="@+id/llTitle"
        layout="@layout/header_layout02" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ivMoney"
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:src="@mipmap/money_coupon_yes"
                android:layout_marginTop="25dp"
                android:layout_marginStart="13dp"/>
            <TextView
                android:id="@+id/youhui_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_toEndOf="@id/ivMoney"
                android:layout_marginStart="23dp"
                android:text="现金代金券"
                android:textColor="#312927"
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/txtRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#888888"
                android:textSize="12sp"
                android:layout_below="@+id/youhui_type"
                android:layout_marginTop="15dp"
                android:layout_alignStart="@+id/youhui_type"
                android:text="全店通用"/>

            <TextView
                android:id="@+id/youhui_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/youhui_type"
                android:layout_below="@+id/txtRange"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="26dp"
                android:text="有效期至：2017.3.6"
                android:textColor="#888888"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/dashLine"
                android:layout_width="2dp"
                android:layout_height="101dp"
                android:background="@drawable/fake_line"
                android:layerType="software"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/coupon_bg_yes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivState"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@mipmap/coupon_used"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="23dp"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/txtNumYes"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="#E04F2E"
                    android:textSize="30sp" />


                <TextView
                    android:textStyle="bold"
                    android:id="@+id/youhui_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="元"
                    android:textColor="#eb5e3a"
                    android:textSize="12sp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="51dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:textColor="#312927"
            android:textSize="13sp"
            android:text="适用影院"/>
        <TextView
            android:id="@+id/movieRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:textSize="12sp"
            android:textColor="#888888"
            android:text="汇和时代影院所有门店"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="21dp"
        android:textColor="#312927"
        android:textSize="13sp"
        android:textStyle="bold"
        android:text="使用须知"/>
    <TextView
        android:id="@+id/decribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_marginTop="23dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="33dp"
        android:text="@string/couponTips"/>

    <RelativeLayout
        android:id="@+id/rlGoMain"
        android:layout_height="56dp"
        android:layout_width="match_parent"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:background="@mipmap/buybtn"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="112dp">
    </RelativeLayout>
</LinearLayout>

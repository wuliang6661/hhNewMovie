<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/prodect_fragment_bg">
    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="11dp"
        android:src="@mipmap/pay_close"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#312927"
        android:textSize="15sp"
        android:text="支付方式"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rlAlipay"
            android:layout_height="45dp"
            android:layout_width="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#312927"
                android:layout_centerVertical="true"
                android:layout_marginStart="145dp"
                android:text="支付宝"
                android:drawableStart="@mipmap/pay_alipay"
                android:drawablePadding="10dp"/>
            <ImageView
                android:id="@+id/ivAlipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="23dp"
                android:src="@mipmap/pay_way_select"
                android:visibility="gone"/>
        </RelativeLayout>
        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#DDDDDD"
            android:visibility="gone"/>
        <RelativeLayout
            android:id="@+id/rlWechatPay"
            android:layout_height="45dp"
            android:layout_width="match_parent"
            android:visibility="visible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#312927"
                android:layout_centerVertical="true"
                android:layout_marginStart="145dp"
                android:text="微信支付"
                android:drawableStart="@mipmap/pay_wechat"
                android:drawablePadding="10dp"/>
            <ImageView
                android:id="@+id/ivWechatPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="23dp"
                android:src="@mipmap/pay_way_select"
                android:visibility="gone"/>
        </RelativeLayout>
        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#DDDDDD"/>
        <RelativeLayout
            android:id="@+id/rlCardPay"
            android:layout_height="45dp"
            android:layout_width="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#312927"
                android:layout_centerVertical="true"
                android:layout_marginStart="145dp"
                android:text="会员卡支付"
                android:drawableStart="@mipmap/pay_card"
                android:drawablePadding="10dp"/>
            <ImageView
                android:id="@+id/ivCardPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="23dp"
                android:src="@mipmap/pay_way_select"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

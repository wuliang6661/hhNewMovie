<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/act_bg01"
    android:orientation="vertical">

    <include layout="@layout/header_layout02" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/edit_register_bg"
        android:gravity="center_vertical">


        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginLeft="@dimen/margin_top"
            android:layout_marginRight="@dimen/margin_top"
            android:background="@mipmap/reg_phone" />


        <EditText
            android:id="@+id/phone_edit"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginRight="@dimen/margin_top"
            android:background="@color/white"
            android:hint="请输入手机号码"
            android:maxLength="11"
            android:phoneNumber="true"
            android:textColor="@color/text_big"
            android:textColorHint="@color/text_style01"
            android:textSize="@dimen/text_big" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/edit_register_bg"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/iv"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginLeft="@dimen/margin_top"
            android:layout_marginRight="@dimen/margin_top"
            android:background="@mipmap/reg_code"
            android:layout_centerVertical="true"/>


        <EditText
            android:id="@+id/picCode"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginRight="@dimen/margin_top"
            android:layout_toEndOf="@id/iv"
            android:background="@color/white"
            android:hint="请输入图文验证"
            android:maxLength="4"
            android:phoneNumber="true"
            android:textColor="@color/text_big"
            android:textColorHint="@color/text_style01"
            android:textSize="@dimen/text_big" />

        <ImageView
            android:id="@+id/ivCode"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="@dimen/margin_top"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_top"
            android:layout_weight="1"
            android:background="@drawable/edit_register_bg"
            android:gravity="center_vertical">


            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginLeft="@dimen/margin_top"
                android:layout_marginRight="@dimen/margin_top"
                android:background="@mipmap/reg_password" />


            <EditText
                android:id="@+id/verification_edit"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginRight="@dimen/margin_top"
                android:background="@color/white"
                android:hint="请输入验证码"
                android:maxLength="6"
                android:phoneNumber="true"
                android:textColor="@color/text_big"
                android:textColorHint="@color/text_style01"
                android:textSize="@dimen/text_big" />


        </LinearLayout>


        <Button
            android:id="@+id/get_verification"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_orange"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/text_big" />

    </LinearLayout>


    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/button_new_yellow"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16dp" />


</LinearLayout>
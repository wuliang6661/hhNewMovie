<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/denglu">


    <LinearLayout
        android:id="@+id/buttom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:background="@color/text_style01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:text="第三方登陆"
                android:textColor="@color/text_style01"
                android:textSize="13dp" />


            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:background="@color/text_style01" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="35dp">


            //weixin,wx,weibo,wb,qq,qq

            <ImageView
                android:id="@+id/weibo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/wb"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/weixin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:background="@mipmap/wx" />

            <ImageView
                android:id="@+id/qq"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/qq"
                android:visibility="gone" />

        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttom_layout"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="103dp"
            android:layout_height="127dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/logo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="59dp"
            android:layout_marginRight="22dp"
            android:background="@drawable/edit_login_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginLeft="@dimen/margin_top"
                android:background="@mipmap/zhanghu" />

            <EditText
                android:id="@+id/phone_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_top"
                android:layout_marginRight="@dimen/margin_top"
                android:background="@color/white"
                android:hint="请输入手机号码"
                android:maxLength="11"
                android:phoneNumber="true"
                android:textColor="@color/text_big"
                android:textColorHint="@color/text_style01"
                android:textSize="@dimen/text_big" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginRight="22dp"
            android:background="@drawable/edit_login_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginLeft="@dimen/margin_top"
                android:background="@mipmap/mima" />

            <EditText
                android:id="@+id/password_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_top"
                android:layout_marginRight="@dimen/margin_top"
                android:background="@color/white"
                android:hint="请输入密码"
                android:password="true"
                android:textColor="@color/text_big"
                android:textColorHint="@color/text_style01"
                android:textSize="@dimen/text_big" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:button="@drawable/check_login_bg" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="请同意"
                android:textColor="#989898"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《汇和影城隐私条款》"
                android:textColor="#009FFF"
                android:textSize="13sp" />

        </LinearLayout>


        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="22dp"
            android:background="@mipmap/login_bg"
            android:gravity="center"
            android:text="登录"
            android:textColor="#141515"
            android:textSize="14sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginRight="22dp">

            <TextView
                android:id="@+id/forword_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码"
                android:textColor="@color/text_style01"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/free_registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="免费注册"
                android:textColor="@color/text_style01"
                android:textSize="13dp" />


        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/act_bg01"
    android:orientation="vertical">

    <include layout="@layout/header_layout02" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="73dp"
            android:layout_height="79dp"
            android:background="@drawable/zhifuchenggong" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="订单支付成功！"
            android:textColor="@color/text_big"
            android:textSize="16dp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/llTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">


        <ImageView
            android:id="@+id/movies_img"
            android:layout_width="62dp"
            android:layout_height="87dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@drawable/zhanwei1" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/movies_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拆弹专家"
                    android:textColor="@color/text_big"
                    android:textSize="@dimen/text_big" />

                <TextView
                    android:id="@+id/movies_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:text="3D英语"
                    android:textColor="@color/text_small"
                    android:textSize="12dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="影城："
                    android:textColor="@color/text_small"
                    android:textSize="@dimen/text_center" />


                <TextView
                    android:id="@+id/movies_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="杭州滨文路德信影城 3号厅"
                    android:textColor="@color/text_big"
                    android:textSize="@dimen/text_center" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="场次："
                    android:textColor="@color/text_small"
                    android:textSize="@dimen/text_center" />

                <TextView
                    android:id="@+id/movies_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-06-02 20:00"
                    android:textColor="#e7271d"
                    android:textSize="@dimen/text_center" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="座位："
                    android:textColor="@color/text_small"
                    android:textSize="@dimen/text_center" />

                <TextView
                    android:id="@+id/movies_seat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6排7座 6排8座"
                    android:textColor="@color/text_big"
                    android:textSize="@dimen/text_center" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_top"
                android:layout_marginTop="@dimen/margin_top"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量："
                    android:textColor="@color/text_small"
                    android:textSize="@dimen/text_center" />

                <TextView
                    android:id="@+id/movies_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/text_big"
                    android:textSize="@dimen/text_center" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9d9d9" />

    <LinearLayout
        android:id="@+id/llProdect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">


        <ImageView
            android:id="@+id/prodect_img"
            android:layout_width="65dp"
            android:layout_height="63dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@drawable/zhanwei1"
            android:layout_marginBottom="15dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/prodectName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#B95558"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="影城："
                    android:textColor="@color/text_small"
                    android:textSize="@dimen/text_center" />

                <TextView
                    android:id="@+id/cinemaName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9d9d9" />

    <RelativeLayout
        android:id="@+id/rlPrice"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@color/white"
        android:visibility="gone">


        <TextView
            android:id="@+id/order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_top"
            android:text="订单号：2202151556555555"
            android:textColor="@color/text_small"
            android:textSize="@dimen/text_small" />


        <TextView
            android:id="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_top"
            android:text="总价: ¥78:00"
            android:textColor="@color/text_small"
            android:textSize="@dimen/text_small" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp">

        <Button
            android:id="@+id/back_home"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="34dp"
            android:layout_weight="1"
            android:background="@drawable/button_yello"
            android:text="返回首页"
            android:textColor="@color/white"
            android:textSize="16dp" />


        <Button
            android:id="@+id/order_message"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_marginRight="28dp"
            android:layout_weight="1"
            android:background="@drawable/button_bule"
            android:text="订单详情"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </LinearLayout>


</LinearLayout>
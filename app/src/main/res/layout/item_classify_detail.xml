<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/my_item_bg"
    android:orientation="horizontal"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtPersonNum"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/prodectnum_bg"
            android:textColor="#FFFFFF"
            android:textSize="9sp"
            android:paddingStart="5dp"
            android:paddingEnd="2dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_marginStart="10dp"
            android:text="双人"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="汇合时代汇合时代汇合时代汇合时代"
            android:layout_toEndOf="@id/txtPersonNum"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#312927"
            android:paddingStart="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="13dp" />

        <TextView
            android:id="@+id/txtDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#888888"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/txtName"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:visibility="invisible"/>
        <LinearLayout
            android:id="@+id/llPrice"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/txtDes"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/txtNoPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.0"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#AAAAAA"/>
            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="￥0.0"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_height="1dp"
            android:layout_width="48dp"
            android:background="#AAAAAA"
            android:layout_marginTop="73dp"
            android:layout_alignStart="@id/llPrice"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/rlSelectP"
            android:layout_height="25dp"
            android:layout_width="90dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            android:layout_below="@id/llPrice"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:visibility="visible">
            <RelativeLayout
                android:id="@+id/rlSelect"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:background="#EEEEEE"
                android:visibility="gone">
                <RelativeLayout
                    android:layout_width="11dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff">
                </RelativeLayout>
                <ImageView
                    android:id="@+id/ivDecrease"
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:src="@mipmap/decrease"/>
                <TextView
                    android:id="@+id/txtNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="1"
                    android:textColor="#312927"
                    android:textSize="15sp"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/ivAdd"
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:src="@mipmap/add"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlNum"
            android:layout_height="23dp"
            android:layout_width="90dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/llPrice"
            android:layout_marginTop="8dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/num"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="#312927"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="1"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>


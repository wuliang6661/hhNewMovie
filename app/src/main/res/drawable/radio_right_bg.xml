<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <solid android:color="#DBB177"></solid>

            <corners android:bottomRightRadius="3dp" android:topRightRadius="3dp"></corners>

            <stroke android:width="1px" android:color="#DBB177"></stroke>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape>
            <solid android:color="@color/act_header_bg_black"></solid>

            <corners android:bottomRightRadius="3dp" android:topRightRadius="3dp"></corners>

            <stroke android:width="1px" android:color="#DBB177"></stroke>
        </shape>
    </item>


</selector>
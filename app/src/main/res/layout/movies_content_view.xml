<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/act_bg01"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/comment_layout"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="17dp"
                android:orientation="horizontal"
                android:visibility="visible">


                <LinearLayout
                    android:id="@+id/want_see"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:layout_weight="1"
                    android:background="@drawable/button_gray"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/want_see_img"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/xk" />


                    <TextView
                        android:id="@+id/want_see_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_top"
                        android:text="想看"
                        android:textColor="@color/text_big"
                        android:textSize="@dimen/text_big" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/have_rating"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="@dimen/margin_top"
                    android:layout_weight="1"
                    android:background="@drawable/button_gray"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/have_rating_img"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/pf" />


                    <TextView
                        android:id="@+id/rating_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_top"
                        android:text="评分"
                        android:textColor="@color/text_big"
                        android:textSize="@dimen/text_big" />


                    <TextView
                        android:id="@+id/rating_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="(看过)"
                        android:textColor="@color/text_small"
                        android:textSize="10dp"
                        android:visibility="gone" />


                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/movies_narrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_marginLeft="@dimen/margin_top"
                android:layout_marginRight="@dimen/margin_top"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:lineSpacingExtra="8dp"
                android:maxLines="4"
                android:textColor="@color/text_style02"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/unfold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="17dp"
                android:text="展开"
                android:textColor="#2ebbe6"
                android:textSize="@dimen/text14" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="37dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:text="演职人员"
                    android:textColor="@color/text_big"
                    android:textSize="@dimen/text_big" />


                <ImageView
                    android:id="@+id/right_img"
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_top"
                    android:background="@drawable/huijiantou" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@+id/right_img"
                    android:text="查看全部"
                    android:textColor="@color/text_style02"
                    android:textSize="@dimen/text_small"
                    android:visibility="gone" />


            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:paddingLeft="@dimen/margin_top"
                android:scrollbars="none" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/video_layout"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="37dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:text="视频"
                    android:textColor="@color/text_big"
                    android:textSize="@dimen/text_big" />


                <ImageView
                    android:id="@+id/right_img01"
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_top"
                    android:background="@drawable/huijiantou" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@+id/right_img01"
                    android:text="查看全部"
                    android:textColor="@color/text_style02"
                    android:textSize="@dimen/text_small"
                    android:visibility="gone" />


            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyle_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:paddingLeft="@dimen/margin_top"
                android:scrollbars="none" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="37dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:text="剧照"
                    android:textColor="@color/text_big"
                    android:textSize="@dimen/text_big" />


                <ImageView
                    android:id="@+id/right_img02"
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_top"
                    android:background="@drawable/huijiantou" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@+id/right_img02"
                    android:text="查看全部"
                    android:textColor="@color/text_style02"
                    android:textSize="@dimen/text_small"
                    android:visibility="gone" />


            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyle_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:paddingLeft="@dimen/margin_top"
                android:scrollbars="none" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/rm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="37dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:text="热门影评"
                    android:textColor="@color/text_big"
                    android:textSize="@dimen/text_big" />


                <ImageView
                    android:id="@+id/right_img03"
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_top"
                    android:background="@drawable/huijiantou" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@+id/right_img03"
                    android:text="查看全部"
                    android:textColor="@color/text_style02"
                    android:textSize="@dimen/text_small"
                    android:visibility="gone" />


            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyle_critic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:paddingLeft="@dimen/margin_top"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/texianshi"
                android:layout_marginTop="38dp"
                android:layout_marginBottom="38dp"
                android:textSize="14dp"
                android:textColor="#32b8e8"
                android:gravity="center"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
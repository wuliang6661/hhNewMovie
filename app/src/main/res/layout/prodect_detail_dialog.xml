<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/prodect_fragment_bg">

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_height="49dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#FAFAFA"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:background="#FAFAFA">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/cola"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="17dp"/>
                <TextView
                    android:id="@+id/tvShopCarNum"
                    android:layout_height="15dp"
                    android:layout_width="15dp"
                    android:background="@drawable/image_oval_shopcar"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="6dp"
                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:text="1"
                    android:gravity="center"
                    android:visibility="gone"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.0"
                android:textColor="#373737"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="9dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llSure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="#DBB177">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="去付款"
                android:textColor="#605643"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="31dp"
                android:drawableEnd="@mipmap/newright"
                android:drawablePadding="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <com.myp.hhcinema.widget.MyscrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/llBottom"
        android:background="#ffffff"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.joooonho.SelectableRoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/prodectImage"
                android:layout_height="375dp"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                app:sriv_left_top_corner_radius="0dip"
                app:sriv_right_top_corner_radius="0dip"
                app:sriv_left_bottom_corner_radius="0dip"
                app:sriv_right_bottom_corner_radius="0dip"
                app:sriv_oval="false" />
            <TextView
                android:id="@+id/prodectName"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@id/prodectImage"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="11dp"
                android:textSize="18sp"
                android:textColor="#2B2B2B"/>
            <TextView
                android:id="@+id/prodectNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AAAAAA"
                android:textSize="11sp"
                android:layout_below="@id/prodectName"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"/>
            <TextView
                android:id="@+id/prodectPrice"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@id/prodectNum"
                android:layout_marginStart="14dp"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:textColor="#D35458"/>

            <RelativeLayout
                android:id="@+id/rlSelectP"
                android:layout_height="25dp"
                android:layout_width="90dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="21dp"
                android:layout_below="@id/prodectNum"
                android:layout_marginTop="12dp"
                android:visibility="visible">
                <RelativeLayout
                    android:id="@+id/rlSelect"
                    android:layout_width="81dp"
                    android:layout_height="match_parent"
                    android:background="#EEEEEE"
                    android:visibility="gone">
                    <RelativeLayout
                        android:layout_width="11dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff">
                    </RelativeLayout>
                    <ImageView
                        android:id="@+id/ivDecrease"
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:src="@mipmap/decrease"/>
                    <TextView
                        android:id="@+id/txtNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="1"
                        android:textColor="#312927"
                        android:textSize="15sp"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/ivAdd"
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:src="@mipmap/add"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/rlSelectP"
                android:layout_marginTop="10dp"
                android:background="#DDDDDD"/>

            <TextView
                android:id="@+id/prodectDecribe"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@id/line"
                android:layout_marginTop="14dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="45dp"
                android:textColor="#888888"
                android:textSize="13sp"/>
        </RelativeLayout>
    </com.myp.hhcinema.widget.MyscrollView>

    <ImageView
        android:id="@+id/close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/closeprodect"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"/>

    <ImageView
        android:id="@+id/send"
        android:layout_height="25dp"
        android:layout_width="25dp"
        android:src="@mipmap/sendprodect"
        android:layout_toStartOf="@id/close"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rlDecreaseActivity"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/hotsell_activity"
        android:layout_above="@id/llBottom"
        android:layout_marginTop="11dp"
        android:visibility="visible">
        <TextView
            android:id="@+id/txtDecreaseInstruction"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:textColor="#312927"
            android:layout_centerVertical="true"
            android:layout_marginStart="44dp"
            android:text="下单享满减，再买"/>
        <TextView
            android:id="@+id/txtDes"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:textColor="#E04F2D"
            android:text="3元,"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/txtDecreaseInstruction"/>
        <TextView
            android:id="@+id/txtAgain"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:textColor="#312927"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/txtDes"
            android:text="，可减"/>

        <TextView
            android:id="@+id/txtDesNum"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:textColor="#E04F2D"
            android:text="3元,"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/txtAgain"
            android:layout_marginEnd="44dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/DecreaseSuccess"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/hotsell_activity"
        android:layout_above="@id/submit_button1"
        android:layout_marginTop="11dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/DecreaseSuccessInstruction"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:textColor="#312927"
            android:layout_centerVertical="true"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="44dp"
            android:text="已满足满减优惠"/>
    </RelativeLayout>

</RelativeLayout>

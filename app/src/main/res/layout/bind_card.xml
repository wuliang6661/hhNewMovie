<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <include layout="@layout/header_layout02" />
    <com.myp.hhcinema.widget.MyscrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/edit_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="*"
                    android:textSize="20sp"
                    android:textColor="#E21918"
                    android:layout_marginStart="10dp" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:background="@mipmap/card_phone" />
                <EditText
                    android:id="@+id/card_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="11dp"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:hint="请输入手机号"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:textColor="@color/text_big"
                    android:textColorHint="@color/text_style01"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/edit_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="*"
                    android:textSize="20sp"
                    android:textColor="#E21918"
                    android:layout_marginStart="10dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:background="@mipmap/card_password" />
                <EditText
                    android:id="@+id/card_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="11dp"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:hint="请输入密码"
                    android:singleLine="true"
                    android:inputType="numberPassword"
                    android:textColor="@color/text_big"
                    android:textColorHint="@color/text_style01"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/edit_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="*"
                    android:textSize="20sp"
                    android:textColor="#E21918"
                    android:layout_marginStart="10dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:background="@mipmap/card_password" />
                <EditText
                    android:id="@+id/sure_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="11dp"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:hint="请再次输入密码"
                    android:singleLine="true"
                    android:inputType="numberPassword"
                    android:textColor="@color/text_big"
                    android:textColorHint="@color/text_style01"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBirthday"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/edit_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="*"
                    android:textSize="20sp"
                    android:textColor="#E21918"
                    android:layout_marginStart="10dp"
                    android:visibility="visible"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:background="@mipmap/birthday" />
                <EditText
                    android:id="@+id/card_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="11dp"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:hint="请选择生日"
                    android:enabled="false"
                    android:singleLine="true"
                    android:textColor="@color/text_big"
                    android:textColorHint="@color/text_style01"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/edit_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="*"
                    android:textSize="20sp"
                    android:textColor="#E21918"
                    android:layout_marginStart="10dp"
                    android:visibility="invisible"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:background="@mipmap/card_gender" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="选择性别"
                    android:textSize="13sp"
                    android:textColor="#888888"
                    android:layout_marginStart="11dp"/>

                <LinearLayout
                    android:id="@+id/llFemale"
                    android:layout_height="match_parent"
                    android:layout_width="45dp"
                    android:layout_marginStart="35dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/ivFemale"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@mipmap/select_true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="女"
                        android:layout_marginStart="6dp"
                        android:textSize="13sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMale"
                    android:layout_height="match_parent"
                    android:layout_width="45dp"
                    android:layout_marginStart="35dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/ivMale"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/circle"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="男"
                        android:layout_marginStart="6dp"
                        android:textSize="13sp"
                        android:textColor="#666666"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/edit_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="*"
                    android:textSize="20sp"
                    android:textColor="#E21918"
                    android:layout_marginStart="10dp"
                    android:visibility="invisible"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:background="@mipmap/card_name" />
                <EditText
                    android:id="@+id/card_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="11dp"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:hint="请输入姓名"
                    android:singleLine="true"
                    android:textColor="@color/text_big"
                    android:textColorHint="@color/text_style01"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/edit_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="*"
                    android:textSize="20sp"
                    android:textColor="#E21918"
                    android:layout_marginStart="10dp"
                    android:visibility="invisible"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:background="@mipmap/idcard" />
                <EditText
                    android:id="@+id/idcard_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="11dp"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:hint="输入身份证(卡丢失补办依据)"
                    android:singleLine="true"
                    android:textColor="@color/text_big"
                    android:textColorHint="@color/text_style01"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E21918"
                android:textSize="12sp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="28dp"
                android:text="*为必填项，一旦确定、不能修改,如需修改会员卡信息、请至影城前台办理"/>

            <!-- 充值界面-->
            <LinearLayout
                android:id="@+id/llRecharge"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="35dp"
                android:gravity="center_horizontal"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/rechargeMoney"
                    android:layout_height="40dp"
                    android:layout_width="270dp"
                    android:background="@mipmap/card_bg"
                    android:layout_marginTop="31dp"
                    android:layout_marginBottom="30dp">
                    <TextView
                        android:id="@+id/txtMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="充值"
                        android:textColor="#FEFCFC"
                        android:textSize="15sp"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </LinearLayout>


            <ImageView
                android:id="@+id/imageNone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:scaleType="fitCenter" />

        </LinearLayout>
    </com.myp.hhcinema.widget.MyscrollView>
</LinearLayout>
